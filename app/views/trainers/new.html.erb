<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>New Trainer</title>
  </head>
  <body>
    <h1>Create A Trainer</h1>
    <%= form_for Trainer.new do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br></br>

      <%= f.label :age %>
      <%= f.text_field :age %>
      <br></br>

      <%= f.label :starter_pokemon %>:
      <%= f.radio_button :starter_pokemon, "bulbasaur" %><%= f.label :bulbasaur %>
      <%= f.radio_button :starter_pokemon, "charmander" %><%= f.label :charmander %>
      <%= f.radio_button :starter_pokemon, "squirtle" %><%= f.label :squirtle %>
      <%= f.radio_button :starter_pokemon, Trainer.random_starter %><%= f.label :random %>
      <br></br>

      <%= f.radio_button :gender, "Male" %><%= f.label :male %>
      <%= f.radio_button :gender, "Female" %><%= f.label :female %>
      <br><br>


      <%= f.submit "Create Trainer" %>
    <% end %>

    <br>
    <%= form_tag "/", method: :get do %>
      <%= submit_tag "Back to Main Menu"%>
    <% end %>
  </body>
</html>
