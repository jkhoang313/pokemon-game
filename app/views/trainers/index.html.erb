<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Trainers</title>
  </head>
  <body>
    <h1>All Trainers</h1>

    <% @trainers.each do |trainer| %>
      <%= link_to trainer.name, trainer_path(trainer) %><br></br>
    <% end %>

    <br>
    <%= form_tag "/trainers/new", method: :get do %>
      <%= submit_tag "New Trainer"%>
    <% end %>

    <br>
    <%= form_tag "/", method: :get do %>
      <%= submit_tag "Back to Main Menu"%>
    <% end %>
  </body>
</html>
